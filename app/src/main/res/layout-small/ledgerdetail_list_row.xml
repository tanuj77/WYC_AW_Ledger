<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="1dp">

    <TextView
        android:id="@+id/tv_vouchertype"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textColor="@color/year"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/report_text_size"/>

    <TextView
        android:id="@+id/tv_vouchernumber"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/year"
        android:textSize="@dimen/report_text_size"/>

    <TextView
        android:id="@+id/tv_voucherdate"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/year"
        android:textSize="@dimen/report_text_size"/>


    <TextView
        android:id="@+id/tv_billno"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:textColor="@color/title"
        android:textSize="@dimen/report_text_size"/>


    <TextView
        android:id="@+id/tv_billdate"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Total"
        android:textColor="@color/year"
        android:textSize="@dimen/report_text_size"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Total"
        android:textColor="@color/year"
        android:textSize="@dimen/report_text_size"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Total"
        android:textColor="@color/year"
        android:textSize="@dimen/report_text_size"
        />


    <TextView
        android:id="@+id/tv_debitamount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Total"
        android:textColor="@color/DarkBlue"
        android:textSize="@dimen/report_text_size"
        />

    <TextView
        android:id="@+id/tv_creditamount"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Total"
        android:textColor="@color/DarkBlue"
        android:textSize="@dimen/report_text_size"
        />

    <TextView
        android:id="@+id/tv_closingbalance"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Total"
        android:textColor="@color/DarkBlue"
        android:textSize="@dimen/report_text_size"
        />

    <TextView
        android:id="@+id/tv_openingbalance"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:text="Total"
        android:textColor="@color/DarkBlue"
        android:textSize="@dimen/report_text_size"/>
    <TextView
        android:id="@+id/tv_vcdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:text="Total"
        android:textColor="@color/year"
        android:textSize="@dimen/report_text_size"/>


</LinearLayout>